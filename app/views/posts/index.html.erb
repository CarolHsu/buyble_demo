<div class="span12">

<h1>Listing posts</h1>

<div class="toolbar group">
  <%= link_to 'New Post', new_post_path, :class => "btn btn-primary pull-right" %>
</div>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Action</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td>
    <%= link_to 'Show', post, :class => "btn btn-success" %>
    <%= link_to 'Edit', edit_post_path(post), :class => "btn btn-warning" %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<%= will_paginate(@posts) %>

</div>
