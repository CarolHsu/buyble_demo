<%= f.error_notification %>
  <%= f.input :content, :as => :text, :input_html => { :class => "input-xxlarge" } %>
  <p>Upload images</p>
    <%= image_tag(@product.avatar_url) if @product.avatar? %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
    <p>Or, you can upload a image url...</p>
    <%= f.text_field :remote_avatar_url %>
    <p>Is this image a front cover?</p>
    <%= f.input :is_front_cover, :as => :boolean, :input_html => { :class => "input-xxlarge" } %>
  <div class="form-actions">
    <%= f.submit "Submit",  :class => "btn btn-primary" %>
  </div>
