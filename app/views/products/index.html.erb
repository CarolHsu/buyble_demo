<div class="span12">

<h1>Listing products</h1>

<div class="toolbar group">
  <% if current_user && current_user.is_admin? %>
  <%= link_to("Admin Panel", admin_products_url, :class => "btn btn-primary pull-right") %>
  <% end %>
</div>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>See more</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.description %></td>
    <td><%= product.ntd %></td>
    <td><%= link_to("Show", product_path(product), :class => "btn btn-success") %></td>
  </tr>
<% end %>
</table>

<%= will_paginate(@products) %>

</div>
